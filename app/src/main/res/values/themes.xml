<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. Базовая тема с общими атрибутами -->
    <style name="Theme.PhoneContacts.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
    </style>

    <!-- 2. Статическая тема -->
    <style name="Theme.PhoneContacts.Static" parent="Theme.PhoneContacts.Base">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorSurface">?android:colorBackground</item>
        <item name="colorOnSurface">?android:textColorPrimary</item>
    </style>

    <!-- 3. Динамическая тема (заготовка) -->
    <style name="Theme.PhoneContacts.Dynamic" parent="Theme.PhoneContacts.Base">
    </style>

    <!-- Тема по умолчанию -->
    <style name="Theme.PhoneContacts" parent="Theme.PhoneContacts.Static"/>

    <!-- Тема для Конфигурации -->
    <style name="Theme.PhoneContacts.Configuration" parent="Theme.PhoneContacts.Static">
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <!-- Тема для Activity Подтверждения Звонка (Диалог) -->
    <!-- <<< ИЗМЕНЕНИЕ: Упрощаем тему, чтобы она не мешала коду Activity >>> -->
    <style name="Theme.PhoneContacts.CallConfirmDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <!-- Атрибуты для поведения диалога -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- Можно оставить windowIsTranslucent, чтобы затемнение работало -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Убираем все явные установки фона окна -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>