<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/setting_clickable_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting Title"
        android:textAppearance="?attr/textAppearanceListItem" />
    <!-- Используем textAppearanceListItem для стандартного вида -->

    <TextView
        android:id="@+id/setting_clickable_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current value"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" /> <!-- Показываем, если summary есть -->

</LinearLayout>