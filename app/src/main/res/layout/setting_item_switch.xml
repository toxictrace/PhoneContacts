<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:minHeight="?attr/listPreferredItemHeight"> <!-- Делаем повыше для Switch -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/setting_switch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting Title"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/setting_switch_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary description"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/setting_switch_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"/>

</LinearLayout>